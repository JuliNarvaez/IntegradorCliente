<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="a13112033.integrador.PedirDietetico"
    android:id="@+id/PedirDietetico">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trufa (Dietetico)"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MiloLight"
        android:id="@+id/miloLight_btn"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OreoLight"
        android:id="@+id/oreoLight_btn"
        android:layout_below="@+id/miloLight_btn"
        android:layout_alignStart="@+id/miloLight_btn"
        android:layout_alignEnd="@+id/miloLight_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArequipeLight"
        android:id="@+id/arequipeLight_btn"
        android:layout_below="@+id/oreoLight_btn"
        android:layout_alignEnd="@+id/oreoLight_btn"
        android:layout_alignStart="@+id/oreoLight_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MaracuyaLight"
        android:id="@+id/maracuyaLight_btn"
        android:layout_below="@+id/arequipeLight_btn"
        android:layout_alignStart="@+id/arequipeLight_btn"
        android:layout_alignEnd="@+id/arequipeLight_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/continuar_btn"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
